@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

</head>
<body>
    <div class="header">
        <div class="headerText">Welcome to online banking system</div>
        <div class="headerButtons">
            @if (!Request.IsAuthenticated)
            {
                @Html.ActionLink("Sign in", "Login", "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-success" })
                @Html.ActionLink("Registration", "Registration", "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
            }
            else
            {
                <span>Hello @User.Identity.Name </span>
                @Html.ActionLink("Log Out", "Logoff", "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
            }
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
<div class="container">
    <div ng-app="bankingApp">
        @RenderBody()
        </div>
    </div>
 

    @Scripts.Render("~/bundles/jqueryval")

    <script src="../../Scripts/loginValidation.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-animate.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-aria.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-messages.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.js"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/moment.js/2.5.1/moment.min.js"></script>
<script src="../../Scripts/moment.min.js"></script>
    <script src="../../Scripts/angular/app.js"></script>
    <script src="../../Scripts/angular/repo/baseRepo.js"></script>
    <script src="../../Scripts/angular/repo/entityRepository.js"></script>
    <script src="../../Scripts/angular/controllers/clientsController.js"></script>
    <script src="../../Scripts/angular/controllers/dialogController.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <footer>
        @DateTime.Now.Year Online Banking. All rights reserved
    </footer>
</body>
</html>
